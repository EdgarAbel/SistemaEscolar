@model DA2_SistemaEscolar2016.Models.Grupo
    @using DA2_SistemaEscolar2016.Models;

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Alumno nuevoAlumno = new Alumno();
    nuevoAlumno.grupoID = Model.grupoID;
}

<h2>Details</h2>

<div>
    <h4>Grupo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombreGrupo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreGrupo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.carrera)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.carrera)
        </dd>

    </dl>
</div>
@Html.Partial("../Alumno/Partial_Create", nuevoAlumno)
     <table class="table table-striped table-hover">
        <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Fecha de Nacimiento</th>
            <th>Grupo</th>

        </tr>

        @foreach (var alumno in Model.alumnos)
        {
            <tr>
                <td>@alumno.nombre</td>
                <td>@alumno.apellidoPaterno</td>
                <td>@alumno.apellidoMaterno</td>
                <td>@alumno.fechaDeNacimiento.ToLongDateString()</td>
                <td>@alumno.grupo.nombreGrupo</td>
                @*<td><a href="/alumno/eliminar"><i class="glyphicon glyphicon-trash"></i></a></td>*@
                <td>@Html.ActionLink("Eliminar", "eliminar","Alumno", new { id = alumno.numeroMatricula },null)</td>
                <td>@Html.ActionLink("Editar", "editar","Alumno", new { id = alumno.numeroMatricula },null)</td>

            </tr>
        }
    </table>
    
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.grupoID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
