@model DA2_SistemaEscolar2016.Models.Alumno
@{
    ViewBag.Title = "editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>


<form action="crear" method="post">
    @Html.HiddenFor(alumno=>alumno.numeroMatricula)
    <div class="row">
        <div class="form-group col-sm-6 ">
            @Html.LabelFor(alumno => alumno.nombre, new { @class = "control-label" })
            <div>
                @Html.EditorFor(alumno => alumno.nombre, new { htmlAttributes = new { required = "", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(alumno => alumno.nombre, "", new { @class = "error" })
        </div>

        <div class="form-group col-sm-6">
            @Html.LabelFor(alumno => alumno.apellidoPaterno, new { @class = "control-label" })
            <div>
                @Html.EditorFor(alumno => alumno.apellidoPaterno, new { htmlAttributes = new { required = "", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(alumno => alumno.apellidoPaterno, "", new { @class = "error" })
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            @Html.LabelFor(alumno => alumno.apellidoMaterno, new { @class = "control-label" })
            <div>
                @Html.EditorFor(alumno => alumno.apellidoMaterno, new { htmlAttributes = new { required = "", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(alumno => alumno.apellidoMaterno, "", new { @class = "error" })
        </div>


        <div class="form-group col-sm-6">
            @Html.LabelFor(alumno => alumno.fechaDeNacimiento, new { @class = "control-label" })
            <div>
                @Html.EditorFor(alumno => alumno.fechaDeNacimiento, new { htmlAttributes = new { required = "", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(alumno => alumno.fechaDeNacimiento, "", new { @class = "error" })
        </div>
    </div>


    <div class="row">
        <div class="form-group col-sm-12">
            <div>
                @Html.LabelFor(alumno => alumno.grupo.nombreGrupo)
            </div>
            @Html.DropDownList("grupoID", null, new { @class = "form-control" })<br />

            <button class="btn btn-primary" type="submit" value="Enviar">Enviar</button>
            <p class="error">@ViewBag.MensajeError</p>
        </div>
    </div>
</form>
